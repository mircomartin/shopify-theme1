<section class="px-4 mt-5">
	<h1 class="text-center text-4xl my-4">{{ collection.title | upcase }}</h1>
	
	{% paginate collection.products by 12 %}

	<div class="grid grid-cols-2 gap-2.5 md:grid-cols-4">
		
		{% for product in collection.products %}
			<div>
				<a href="{{ product.url }}">
					<figure>
						{% if product.featured_image %}
						<img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.featured_image.alt }}" class="w-full h-auto object-cover">
						{% endif %}
					</figure>
				</a>
				<div class="flex justify-between items-center mt-6">
					<a href="{{ product.url }}" class="tracking-wider">{{ product.title | upcase }}</a>
					<span>{{ product.price | money }}</span>
				</div>
			</div>
			{% else %}
				<p>There are no products inside of this collection.</p>
		{% endfor %}
		
	</div>

	{% render 'pagination', pagination: paginate %}
	{% endpaginate %}
	
</section>