<section class="mx-auto p-4 w-full md:p-0 md:w-1/2">
	<div style="background: url('{{article.image | img_url: 'grande'}}') no-repeat center; height: 500px; background-size:cover;" class="flex items-center justify-center" >
		<div class="flex flex-col gap-2">
			<h1 class="text-2xl text-white font-bold tracking-wider">{{article.title | upcase}}</h1>
			<small class="text-white">{{article.author | upcase}}</small>
			<time datetime="{{article.published_at | date: '%Y-%m-%d'}}" class="text-white">{{article.published_at | date: '%Y-%m-%d'}}</time>
		</div>
	</div>
	
	<article>
		{{article.content}}
	</article>

</section>
