<section class="mx-auto my-10 p-4 w-full md:w-1/2 min-h-500">
	<h1 class="uppercase font-bold tracking-widest text-xl mb-4 text-center">RESET YOUR PASSWORD</h1>
	<div>
		{% form 'reset_customer_password' %}
			{% if form.errors %}
				<div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3 mb-4" role="alert">
					<strong class="font-bold uppercase">Error!</strong>
					<p class="block sm:inline">{{ form.errors | default_errors | upcase }}</p>
				</div>
			{% endif %}

			<div class="flex flex-col gap-1.5 mb-4">
				<label for="password" class="uppercase">PASSWORD</label>
				<input 
					class="p-2.5 border border-slate-300"
					type="password" 
					name="customer[password]" 
					id="password"
					autocomplete="current-password">
			</div>

			<div class="flex flex-col gap-1.5">
				<label for="password_confirmation" class="uppercase">PASSWORD CONFIRMATION</label>
				<input 
					class="p-2.5 border border-slate-300"
					type="password" 
					name="customer[password_confirmation]" 
					id="password_confirmation"
					autocomplete="new-password">
			</div>

			<div class="flex justify-center md:justify-start mt-4">
				<button type="submit" class="py-4 px-6 tracking-wider uppercase border border-black bg-white hover:bg-black hover:text-white">Reset Password</button>
			</div>
		{% endform %}
	</div>
</section>